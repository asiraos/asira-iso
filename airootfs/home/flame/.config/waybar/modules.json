{
  // HYPRLAND WORKSPACES MODULE
  "hyprland/workspaces": {
    "format": "{name}",
    "on-click": "activate",
    "sort-by-number": true
  },

  // CUSTOM APP ICON MODULE
  "custom/appicon": {
    "on-click": "~/.config/rofi/launcher-theme.sh",
    "on-click-right": "~/.config/rofi/launcher-switcher.sh",
    "format": "",
    "tooltip": false
  },

 // CUSTOM SPERATOR
  "custom/separator": {
  "format": "/",
  "tooltip": false
},


// Power Profiles

"power-profiles-daemon": {
  "format": "{icon}",
  "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
  "tooltip": true,
  "format-icons": {
    "default": "",
    "performance": "",
    "balanced": "",
    "power-saver": ""
  }
},

// Shows active window title (max 25 chars)
"hyprland/window": {
  "max-length": 25
},

// System tray icons
"tray": {
  "format": "{icons}"
},

// Keyboard state (Caps Lock / Num Lock)
"keyboard-state": {
  "numlock": true,
  "capslock": true,
  "format": "{name} {icon}",
  "format-icons": {
    "locked": "",
    "unlocked": ""
  }
},

// Battery status & icons
"battery": {
  "interval": 1,
  "states": {
    "good": 95,
    "warning": 30,
    "critical": 15
  },
  "format": "{icon}{capacity}%",
  "format-charging": " {capacity}%",
  "format-plugged": " {capacity}%",
  "format-icons": [" ", " ", " ", " ", " "]
},

// RAM usage display
"memory": {
  "format": " {}% /"
},

// CPU usage display
"cpu": {
  "interval": 1,
  "format": "C {}%",
  "max-length": 10
},

// Network status (Wi-Fi/Ethernet)
"network": {
  "interval": 1,
  "format": "{ifname}  off",
  "format-wifi": " {essid}",
  "format-ethernet": "  {ifname}",
  "format-disconnected": " disconnected",
  "format-wifi-alt": "  {ssid}",
  "tooltip-format": " {ifname} via {gwaddri}",
  "tooltip-format-wifi": "  {ifname} @ {essid}\nIP: {ipaddr}\nStrength: {signalStrength}%\nFreq: {frequency}MHz\nUp: {bandwidthUpBits} Down: {bandwidthDownBits}",
  "tooltip-format-ethernet": " {ifname}\nIP: {ipaddr}\n up: {bandwidthUpBits} down: {bandwidthDownBits}",
  "tooltip-format-disconnected": "Disconnected",
  "max-length": 10,
  "on-click": "~/.config/flames/scripts/wifi.sh",
  "on-click-right": "nm-connection-editor"
},

// Taskbar showing app icons
"wlr/taskbar": {
  "format": "{icon}",
  "rotate": 0,
  "icon-size": 18,
  "icon-theme": "Papirus-Dark",
  "spacing": 16,
  "tooltip-format": "{title}",
  "on-click": "activate",
  "on-click-middle": "close",
  "ignore-list": ["kitty"],
  "app_ids-mapping": {
    "firefoxdeveloperedition": "firefox-developer-edition"
  },
  "max-length": 10
},

// Audio (PulseAudio) volume/mic control
"pulseaudio": {
  "format": "{icon}{volume}%",
  "format-bluetooth": "{volume}% {icon} {format_source}",
  "format-bluetooth-muted": "  {icon} {format_source}",
  "format-muted": " {format_source}",
  "format-source": "{volume}% ",
  "format-source-muted": "",
  "format-icons": {
    "headphone": " ",
    "hands-free": " ",
    "headset": " ",
    "phone": " ",
    "portable": " ",
    "car": " ",
    "default": ["", " ", " "]
  },
  "on-click": "~/.config/waybar/scripts/pavu.sh"
},

// Bluetooth status
"bluetooth": {
  "format": "",
  "format-disabled": "",
  "interval": 30,
  "on-click": "pypr toggle bluetooth && hyprctl dispatch brigactivetotop",
  "format-no-controller": ""
},

// Logged-in username
"user": {
  "format": "{user}",
  "interval": 60,
  "icon": false
},

// Screen brightness control
"backlight": {
  "format": "{icon} {percent}%",
  "format-icons": [
    "", "", "", "", "", "", "", "",
    "", "", "", "", "", "", ""
  ],
  "scroll-step": 1
},

// Clock
"clock": {
  "format": "{:%I:%M %a}",
  "on-click": "gnome-clocks",
  "tooltip": false
},

// Pacman package update checker
"custom/pacman": {
  "format": " {}",
  "interval": 3600,
  "exec": "checkupdates | wc -l",
  "exec-if": "exit 0",
  "on-click": "nohup kitty -e ~/flamedots/update.sh",
  "signal": 8
},

// Power menu
"custom/pmenu": {
  "format": " ",
  "on-click": "~/.config/rofi/powermenu-theme.sh",
  "on-click-right": "~/.config/rofi/powermenu-switcher.sh"
},

// Notifications toggle
"custom/notification": {
  "format": "",
  "on-click": "swaync-client -t"
},

// System stats menu (btop)
"custom/stats": {
  "format": "󰓅 ",
  "on-click": "pypr toggle btop && hyprctl dispatch brigactivetotop"
},

// System settings shortcut
"custom/settings": {
  "format": " ",
  "on-click": "kitty -e ~/.config/flames/scripts/settings.sh"
},

// File manager shortcut
"custom/filemanager": {
  "format": " ",
  "on-click": "nemo",
  "tooltip-format": "Open file manager"
},

// Browser shortcut
"custom/browser": {
    "format": "󰖟 ",
    "on-click": "firefox",
    "tooltip-format": "Open Browser"
},

// Chat Gpt 
"custom/chatgpt": {
    "format": " ",
    "on-click": "chromium --app=https://chatgpt.com",
    "tooltip-format": "Open ChatGpt"
  },


// Audio visualizer (CAVA)
"custom/cava": {
  "exec": "~/.config/flames/scripts/cava-waybar.sh",
  "framerate": 60
},

// Group: utilities (network, updates, volume, battery)
"group/utils": {
  "orientation": "horizontal",
  "drawer": {
    "transition-duration": 300,
    "children-class": "not-memory",
    "transition-left-to-right": false
  },
  "modules": ["network", "custom/pacman", "pulseaudio", "battery"]
},

// Group: essentials (notifications, power menu)
"group/ess": {
  "orientation": "horizontal",
  "modules": ["custom/notification","custom/separator", "custom/pmenu"]
},

// Tray expander icon
"custom/trayicon": {
  "format": "󱥪 "
},

// Group: tray (tray icon button + actual tray)
"group/tray": {
  "orientation": "inherit",
  "drawer": {
    "transition-duration": 300,
    "children-class": "not-memory",
    "transition-left-to-right": true
  },
  "modules": ["custom/trayicon", "tray"]
}
}
