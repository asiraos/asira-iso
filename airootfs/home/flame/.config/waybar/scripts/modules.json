{
  "hyprland/window": {
    "max-length": 25
  },
  "hyprland/workspaces": {
    "on-scroll-up": "hyprctl dispatch workspace r-1",
    "on-scroll-down": "hyprctl dispatch workspace r+1",
    "on-click": "activate",
    "active-only": false,
    "all-outputs": true,
    "format": "{}",
    "format-icons": {
      "urgent": "",
      "active": "",
      "default": ""
    },
    "persistent-workspaces": {
      "*": 0
    }
  },
  "tray": {
    "format": "{icons}"
  },
  "keyboard-state": {
    "numlock": true,
    "capslock": true,
    "format": "{name} {icon}",
    "format-icons": {
      "locked": "",
      "unlocked": ""
    }
  },
  "battery": {
    "interval": 1,
    "states": {
      "good": 95,
      "warning": 30,
      "critical": 15
    },
    "format": "{icon}{capacity}%",
    "format-charging": " {capacity}%",
    "format-plugged": " {capacity}%",
    "format-icons": [" ", " ", " ", " ", " "]
  },
  "memory": {
    "format": " {}% /"
  },
  "cpu": {
    "interval": 1,
    "format": "C {}%",
    "max-length": 10
  },
  "network": {
    "interval": 1,
    "format": "{ifname}  off",
    "format-wifi": " {essid}",
    "format-ethernet": "  {ifname}",
    "format-disconnected": " disconnected",
    "format-wifi-alt": "  {ssid}",
    "tooltip-format": " {ifname} via {gwaddri}",
    "tooltip-format-wifi": "  {ifname} @ {essid}\nIP: {ipaddr}\nStrength: {signalStrength}%\nFreq: {frequency}MHz\nUp: {bandwidthUpBits} Down: {bandwidthDownBits}",
    "tooltip-format-ethernet": " {ifname}\nIP: {ipaddr}\n up: {bandwidthUpBits} down: {bandwidthDownBits}",
    "tooltip-format-disconnected": "Disconnected",
    "max-length": 60,
    "on-click": "~/.config/flames/scripts/wifi.sh",
    "on-click-right": "nm-connection-editor"
  },
  "wlr/taskbar": {
    "format": "{icon}",
    "rotate": 0,
    "icon-size": 18,
    "icon-theme": "Tela-circle-dracula",
    "spacing": 0,
    "tooltip-format": "{title}",
    "on-click": "activate",
    "on-click-middle": "close",
    "ignore-list": ["kitty"],
    "app_ids-mapping": {
      "firefoxdeveloperedition": "firefox-developer-edition"
    },
    "max-length": 10
  },
  "pulseaudio": {
    "format": "/ {icon}{volume}% / ",
    "format-bluetooth": "{volume}% {icon} {format_source}",
    "format-bluetooth-muted": "  {icon} {format_source}",
    "format-muted": " {format_source}",
    "format-source": "{volume}% ",
    "format-source-muted": "",
    "format-icons": {
      "headphone": " ",
      "hands-free": " ",
      "headset": " ",
      "phone": " ",
      "portable": " ",
      "car": " ",
      "default": ["", "", ""]
    },
    "on-click": "~/.config/waybar/scripts/pavu.sh"
  },
  "bluetooth": {
    "format": "",
    "format-disabled": "",
    "interval": 30,
    "on-click": "pypr toggle bluetooth && hyprctl dispatch brigactivetotop",
    "format-no-controller": ""
  },
  "user": {
    "format": "{user}",
    "interval": 60,
    "icon": false
  },
  "backlight": {
    "format": "{icon} {percent}%",
    "format-icons": [
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      ""
    ],
    "scroll-step": 1
  },
  "clock": {
    "format": "{:%I:%M %a}",
    "on-click": "gnome-clocks",
    "tooltip": false
  },
  "custom/pacman": {
    "format": " {}",
    "interval": 3600,
    "exec": "checkupdates | wc -l",
    "exec-if": "exit 0",
    "on-click": "nohup kitty -e ~/flamedots/update.sh",
    "signal": 8
  },
  "custom/pmenu": {
    "format": " / ",
    "on-click": "~/.config/rofi/powermenu-theme.sh",
    "on-click-right": "~/.config/rofi/powermenu-switcher.sh"
  },
  "custom/notification": {
    "format": "",
    "on-click": "swaync-client -t"
  },
  "custom/stats": {
    "format": " 󰓅",
    "on-click": "pypr toggle btop && hyprctl dispatch brigactivetotop"
  },
  "custom/settings": {
    "format": "",
    "on-click": "kitty -e ~/.config/flameos/settings.sh"
  },
  "custom/filemanager": {
    "format": "",
    "on-click": "thunar",
    "tooltip-format": "Open file manager"
  },
  "custom/appmenu": {
    "format": "Apps",
    "on-click": "~/.config/rofi/launcher-theme.sh",
    "on-click-right": "~/.config/rofi/launcher-switcher.sh",
    "tooltip-format": "Left: Open the application launcher\nRight: Show all keybindings"
  },
  "custom/appmenuicon": {
    "format": "Apps",
    "on-click": "~/.config/rofi/launcher-theme.sh",
    "on-click-right": "~/.config/rofi/launcher-switcher.sh",
    "tooltip-format": "Left: Open the application launcher\nRight: Show all keybindings"
  },
  "custom/cava": {
    "exec": "~/.config/flames/scripts/cava-waybar.sh",
    "framerate": 60
  },
  // CUSTOM GROUP
  "group/utils": {
    "orientation": "horizontal",
    "drawer": {
      "transition-duration": 300,
      "children-class": "not-memory",
      "transition-left-to-right": false
    },
    "modules": ["network", "custom/pacman", "pulseaudio", "battery"]
  },
  "group/extra": {
    "orientation": "horizontal",
    "modules": ["custom/notification", "custom/pmenu"]
  },
  "custom/trayicon": {
    "format": ""
  },
  "group/tray": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 300,
      "children-class": "not-memory",
      "transition-left-to-right": true
    },
    "modules": ["custom/trayicon", "tray"]
  }
}
